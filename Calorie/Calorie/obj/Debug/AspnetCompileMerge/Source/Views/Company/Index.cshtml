@model Calorie.Models.Companys.AllCompanysVM


@{
    var FilterVM = new Calorie.Models.Misc.FilterVM
    {
        Callback = "window.doFilter(a, b)",
        Options = new List<string>() { "Most Stars", "Most Sponsored"}
    };

}

@Html.Partial("..\\Shared\\_FilterPartial", FilterVM)

<script id="indexScript"
        data-filter-url="@Url.Action("Filter", "Company")"
        src="~/Scripts/Calorie/Company/Index.js">
</script>

<br/>
<div id="filterResults">

    @foreach (var Co in Model.Companys.Select((value, i) => new { idx = i + 1, value }))
    {
        @Html.Partial("..\\Company\\_CorporatePartial", new Calorie.Models.Companys.CompanyPartialVM() { Company = Co.value, ShowFullDetails = true })

    }
</div>

