@model Calorie.Models.Trackers.runKeeperVM

@{

    var dateobj = new DateTime();
    DateTime.TryParse(Model.JSONObj.start_time, out dateobj);
    var DateString = @dateobj.ToString("dd MMMM yyyy HH:mm");
    
}

<div class="runKeeperAcitivitySummary">
    <div class="summarydetails">

        <div class="row hidden-sm hidden-md hidden-lg hidden-xl">
            <div class="col-xs-10">
                <div class="row">
                    <div class="col-xs-8">
                        <span class="glyphicon glyphicon-calendar"></span>&nbsp;@DateString
                    </div>
                    <div class="col-xs-4 ">
                        <text class="pull-right">&nbsp;@Model.JSONObj.type</text><img class="pull-right" src="@Url.Content(string.Format("~/Images/Activities/{0}.png", @Model.JSONObj.type))">
                    </div>
                </div>
                </div>
                <div class="col-xs-2">
                    <button onclick="RunKeeperActivityClick(event)" class="btn btn-default btn-sm pull-right" data-activityIdent="@Model.JSONObj.uri"><span class="glyphicon glyphicon-chevron-down"></span></button>
                </div>
            </div>
        

        <div class="row hidden-xs ">


            <div class="col-xs-3"><span class="glyphicon glyphicon-calendar"></span>&nbsp;@DateString</div>
            <div class="col-xs-2">
                <img src="@Url.Content(string.Format("~/Images/Activities/{0}.png", @Model.JSONObj.type))">&nbsp;@Model.JSONObj.type
            </div>

            <div class="col-xs-2">
                <span class="glyphicon glyphicon-road"></span>&nbsp;@Model.JSONObj.total_kilometers KM
            </div>
            <div class="col-xs-2">
                <span class="glyphicon glyphicon-time"></span>&nbsp;@Model.JSONObj.duration_hours Hours
            </div>
            <div class="col-xs-2">
                <span class="glyphicon glyphicon-fire"></span>&nbsp;@Model.JSONObj.total_calories Calories
            </div>
            <div class="col-xs-1">
                <button onclick="RunKeeperActivityClick(event)" class="btn btn-default btn-sm pull-right" data-activityIdent="@Model.JSONObj.uri"><span class="glyphicon glyphicon-chevron-down"></span></button>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-xs-12 fulldetails">
        </div>    
    </div>
    
</div>




