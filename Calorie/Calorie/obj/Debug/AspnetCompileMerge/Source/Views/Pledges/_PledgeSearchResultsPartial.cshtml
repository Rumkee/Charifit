
@model Calorie.Models.Pledges.PledgeSearchVM


@Html.Partial("..\\Pledges\\_PledgePartialList", new Calorie.Models.Pledges.PledgePartialListVM() { Pledges = Model.Pledges, Animate = true })



    @if (!Model.Pledges.Any())
    {

                <div class="alert alert-warning fade in " role="alert">
                    @if (Model.LoggedIn)
                    {
                        <div class="row">
                            <div class="col-xs-12 col-sm-9">                                
                                <h5>Oooops! it looks like we couldn't find anything matching your search.</h5> 
                                <h5>How about we send you an email when something comes up ?</h5>
                            </div>
                            <div class="col-xs-12 col-sm-3">
                                <button type="button" class="btn btn-sm btn-success pull-right " onclick="AddPledgeAlert('@Model.SearchString')" data-dismiss="alert" aria-label="ok"><span aria-hidden="true">OK</span></button>

                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-xs-12 col-sm-9">
                                <h5 >Oooops! it looks like we couldn't find anything matching your search.</h5>
                                <h5>Log in or sign up and we can send you an email when something comes up</h5>
                            </div>
                            <div class="col-xs-12 col-sm-3">
                                <button type="button" class="btn btn-sm btn-success pull-right "  data-dismiss="alert" aria-label="ok"><span aria-hidden="true">OK</span></button>

                            </div>
                        </div>
                    }
                    
                </div>

    }
