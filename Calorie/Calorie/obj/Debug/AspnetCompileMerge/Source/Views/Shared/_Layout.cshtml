@using System.Activities.Expressions
@using System.Configuration

<!DOCTYPE html>
<html style="display: block !important">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChariFit</title>

    <!--fav icon-->
    <link rel="apple-touch-icon" sizes="57x57" href="~/favicons/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/favicons/apple-touch-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/favicons/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/favicons/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/favicons/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/favicons/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/favicons/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/favicons/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicons/apple-touch-icon-180x180.png">
    <link rel="icon" type="image/png" href="~/favicons/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="~/favicons/favicon-194x194.png" sizes="194x194">
    <link rel="icon" type="image/png" href="~/favicons/favicon-96x96.png" sizes="96x96">
    <link rel="icon" type="image/png" href="~/favicons/android-chrome-192x192.png" sizes="192x192">
    <link rel="icon" type="image/png" href="~/favicons/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="~/favicons/manifest.json">
    <link rel="mask-icon" href="~/favicons/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="~/favicons/favicon.ico">
    <meta name="apple-mobile-web-app-title" content="ChariFit">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="ChariFit">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-TileImage" content="~/favicons/mstile-144x144.png">
    <meta name="msapplication-config" content="~/favicons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">


    <!--global css-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://api.mapbox.com/mapbox.js/v2.2.2/mapbox.css">
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.0/summernote.css">


    @Styles.Render("~/Content/css")

    <!--_Layout CSS-->
    <link rel="stylesheet" href="~/CSS/Shared/_Layout.css">
    <link rel="stylesheet" href="~/CSS/Shared/_LayoutTopNavbar.css">
    <link rel="stylesheet" href="~/CSS/Social/Social.css">
    <link rel="stylesheet" href="~/CSS/Account/_UserPartial.css">
    <link rel="stylesheet" href="~/CSS/Account/_UserPopUp.css">
    <link rel="stylesheet" href="~/CSS/Account/_LoginPartial.css">
    <link rel="stylesheet" href="~/CSS/Charities/_CharityPartial.css">
    <link rel="stylesheet" href="~/CSS/Charities/_CharityPartialSmall.css">
    <link rel="stylesheet" href="~/CSS/Charities/_CharityTinyPartial.css">
    <link rel="stylesheet" href="~/CSS/Pledges/Pledges.css">
    <link rel="stylesheet" href="~/CSS/Pledges/_PledgePartial2.css">
    <link rel="stylesheet" href="~/CSS/Company/_CorporatePartial.css">
    <link rel="stylesheet" href="~/CSS/Teams/Team.css">


    <!--local css-->
    @RenderSection("localcss", false)


    <!--global scripts-->
    @Scripts.Render("~/bundles/modernizr")

    <!--Check browser is supported-->
    <script id="browserCheckScript" data-redirect-url="@Url.Action("BrowserNotSupported", "Home")" src="~/Scripts/Calorie/Shared/browserCheck.js"></script>

    <!--JQuery-->
    @Scripts.Render("~/bundles/jquery")
    <!--JQuery Validation-->
    @Scripts.Render("~/bundles/jqueryval")
    <!--locally hosted third party scripts-->
    @Scripts.Render("~/bundles/bootstrap")
    <!--Calorie bundle-->
    @Scripts.Render("~/bundles/calorie")

    <!--Externally hosted third party scripts-->
    <script src="https://api.mapbox.com/mapbox.js/v2.2.2/mapbox.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/webshim/1.14.5/polyfiller.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-parallax/1.1.3/jquery-parallax-min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.0/summernote.js"></script>


    <script>
        calorie.images.getImageURL = '@Url.Action("GetImage", "Image")';
        calorie.images.saveImageURL = '@Url.Action("SaveImage", "Image")';
        calorie.images.deleteImageURL = '@Url.Action("DeleteImage", "Image")';
        calorie.images.saveImageFromURLURL = '@Url.Action("SaveImageFromURL", "Image")';
        calorie.social.likes.addUrl = '@Url.Action("LikesAdd", "Social")';
        calorie.social.likes.countUrl = '@Url.Action("LikesCount", "Social")';
        calorie.helpers.currency.DisplayAmountFromBaseURL = '@Url.Action("DisplayAmountFromBase", "Pledges")';
        calorie.account.checkUserNameURL = '@Url.Action("CheckUsername", "Account")';
        calorie.alerts.deleteURL = '@Url.Action("DeleteAlert", "Alerts")';
    </script>


    <!--_Layout scripts-->
    <script id="cookieWarningScript" data-cookie-policy-url="@Url.Action("Cookies", "Home")" src="~/Scripts/Calorie/Shared/cookieWarning.js"></script>
    
    <!--Open Graph and other metadata-->
    <meta property="og:url" content="@Request.Url.AbsoluteUri"/>
    <meta property="og:site_name" content="Charifit"/>
    <meta property="fb:app_id" content="@ConfigurationManager.AppSettings["FacebookAppID"]"/>
    @RenderSection("metatags", false)


</head>

<body class="calorie-green ">

<script src="~/Scripts/Calorie/Shared/_Layout.js"></script>


<!--Top Navbar-->
@Html.Partial("_LayoutTopNavbar")


<div class="container body-content">
    <div class="row calorie-grey-light body-row">

        <!--Major Alerts-->
        <div id="majorAlerts">
            @{
                @Html.Partial("_SandboxPartial")
                ;
            }
        </div>

        <!--Main Section-->
        <div class="col-xs-12 col-md-9 col-xl-10 ">
            <br/>
            <!--Regular Alerts-->
            <div id="alerts">
                @{
                    Html.RenderAction("GetAlerts", "Alerts");
                }
            </div>
            @{
                Html.RenderAction("LoggedInUser", "Account");
            }

            @RenderBody()
        </div>


        <!--Side bar-->
        <div class="hidden-xs hidden-sm col-md-3 col-xl-2 pull-right" id="sidebar">
            @{ Html.RenderAction("Sidebar", "Home"); }

        </div>

    </div>


    <div class="footer row">
        <hr/>
        <!--col1 logo-->
        <div class="col-xs-12 col-sm-3">
            <span class="footer-logo">
                    ChariF<span class="calorie-green-color">Ώ</span>t
                </span>
                
            <i class="footer-copyright">
                <br/>&copy; @DateTime.Now.Year
            </i>
        </div>

        <!--col2-->
        <div class="col-xs-12 col-sm-3">

            <div class="row">
                <div class="col-xs-12">
                    @Html.ActionLink("About", "About", "Home")
                </div>
                <div class="col-xs-12">
                    @Html.ActionLink("Terms & Conditions", "TandC", "Home")
                </div>
                <div class="col-xs-12">
                    @Html.ActionLink("Cookies", "Cookies", "Home")
                </div>
            </div>

        </div>

        <!--col3-->
        <div class="col-xs-12 col-sm-3">
            <div class="row">
                <div class="col-xs-12">
                    @Html.ActionLink("Contact", "Contact", "Home")
                </div>
                <div class="col-xs-12">
                    @Html.ActionLink("FAQ's", "FAQ", "Home")
                </div>
                <div class="col-xs-12">
                    @Html.ActionLink("Blog", "Blog", "Home")
                </div>

            </div>
        </div>

        <!--col4 social-->
        <div class="col-xs-12 col-sm-3">
            <div class="row">

                <div class="col-xs-12">
                    <div class="social-icon">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                    </div>
                    <div class="social-icon">
                        <a href="#"><i class="fa fa-twitter"></i></a>
                    </div>
                    <div class="social-icon">
                        <a href="#"><i class="fa fa-linkedin "></i></a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    
</div>



@*global templates*@
@Html.Partial("..\\Account\\Templates\\_UserPopUpTemplate")
@Html.Partial("..\\Shared\\_AlertTemplate")

@RenderSection("scripts", required: false)

</body>

</html>



