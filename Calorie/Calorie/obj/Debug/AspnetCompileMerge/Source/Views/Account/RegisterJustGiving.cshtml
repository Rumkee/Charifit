@model Calorie.Models.RegisterJustGiving
@{
    ViewBag.Title = "Register JustGiving";

}


@section localcss
{
    <link rel="stylesheet" type="text/css" href="~/CSS/Account/RegisterJustGiving.css">
}



<div class="panel">
    <div class="panel-body">
        <div >
            <div class="row">
                <div class="col-xs-12">
                    <img  class="register-justGivingImg" src="data:image/svg+xml;base64," />
                </div>
                <div class="col-xs-12">
                    <h6><i>
                            If your planning to sponsor, you'll need a JustGiving account.<br /><br />
                            Fill in the information bellow and we'll create one for you if you don't have an account already <b>or you can skip this step.</b>
                        </i>
                    </h6>
                </div>             
                
            </div>
            
            
        </div>
        <div>
            <br />
            @using (Html.BeginForm("RegisterJustGiving", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
              
                @Html.ValidationSummary("", new { @class = "text-danger" })


                <div class="form-group">
                  
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                   
                            
                        <h6 class="InputLabel">Title</h6>
                        <select class="form-control register-dropdownlist" name="title">
                            @{
                                foreach (var title in new string[]{ "Mr", "Mrs", "Miss", "Ms", "Dr", "Other" })
                                {
                                    <option>@title</option>

                                }
                            }
                        </select>
                    </div>
                </div>

              


                <div class="form-group">
                  
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                        <h6 class="InputLabel">First Name</h6>
                        @Html.TextBoxFor(m => m.firstname, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group">
                 
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                        <h6 class="InputLabel">Last Name</h6>
                            @Html.TextBoxFor(m => m.lastname, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group">
                  
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                        <h6 class="InputLabel">Address</h6>
                            @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control" })
                        @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                  
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                        <h6 class="InputLabel">Town Or City</h6>
                            @Html.TextBoxFor(m => m.AddressTownOrCity, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group">
               
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                        <h6 class="InputLabel">Postcode Or Zip</h6>
                            @Html.TextBoxFor(m => m.postcodeOrZip, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group">
                 
                    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                        <h6 class="InputLabel">Country</h6>
                     
                        <select id="countriesSelect" class="form-control register-dropdownlist"  name="country">
                            @foreach (var itm in Model.Countries)
                            {
                                @:<option value='@itm.Key'>@itm.Value</option>
                            }
                            @if (!Model.Countries.Any())
                            {
                                @:<option value='a'>There was a problem, please try again later</option>
                            }

                        </select>

                    </div>
                </div>

                              
                    <div class=" col-xs-12">  
                        <div class="btn-group pull-right">
                          
                            <input id="registerBtn" type="submit" class="btn btn-default " value="Register" />
                            <a href="@Url.Action("Index", "Home")" class="btn btn-default pull-right">
                              Skip
                            </a>
                        </div>                      
                    </div>
                    

            }


        </div>
    </div>
</div>
