
@model Calorie.Models.Charities.CharityListVM


@foreach (var C in @Model.Charities)
{
    @Html.Partial("..\\Charities\\_CharityPartial",
        new Calorie.Models.Charities.CharityVM() {Charity = C, ShowSelector = Model.ShowSelector, ShowJustGivingLink = Model.ShowJustGivingLink, ShowSocial = Model.ShowSocial})
    <hr/>
}


@if (!Model.Charities.Any())
{

        <div class="alert alert-warning fade in " role="alert">

            <div class="row">
                <div class="col-xs-12 col-sm-9">
                    <i class="fa fa-frown-o" aria-hidden="true"></i>>&nbsp;<text style="line-height: 25px">Oooops! it looks like we couldn't find anything matching your search.</text>
                </div>

            </div>

        </div>
          
}

