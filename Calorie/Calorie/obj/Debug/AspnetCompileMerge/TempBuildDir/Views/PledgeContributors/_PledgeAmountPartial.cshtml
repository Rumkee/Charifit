@using Calorie.BusinessLogic.Social
@using Calorie.Models.Pledges
@model PledgeContributorVM


@{
    var PCIdent = "PledgeContribution" + @Model.PC.ID;
}


<div class="col-xs-12 col-sm-6 col-lg-6 col-xl-4">

    <div class="panel pledgeAmountPanel" id="@PCIdent" >

        <div class="panel-heading">

            @Html.Partial("..\\Pledges\\_PayUpPartial", @Model)         
         
            @Html.Partial("..\\Social\\_SocialPartial", Social.GetSocialVMForPledgeContribution(@Model.PC, PCIdent, Request, Url))
            <br/>
        </div>

        <div class="panel-body">

            <div class="row">
                <div class="col-xs-6">
                    @if (@Model.PC.UserAnonymous)
                    {
                        <i  class="fa fa-user-secret" aria-hidden="true"></i>
                    }
                    else
                    {
                        @Html.Partial("..\\Account\\_UserPartial", @Model.PC.Sinner)
                    }

                </div>


                <div class="col-xs-6 amount">

                    @if (!@Model.PC.AmountAnonymous)
                    {
                        <div data-currencycode="@Model.PC.Currency" data-currencyamount="@Model.PC.Amount"></div>
                    }
                    else
                    {
                        <span> ??? </span>                     
                    }

                </div>
                <div class="col-xs-12">
                    <br/>
                    @Html.Raw(@Model.PC.Comment)
                </div>


            </div>

        </div>

    </div>

</div>