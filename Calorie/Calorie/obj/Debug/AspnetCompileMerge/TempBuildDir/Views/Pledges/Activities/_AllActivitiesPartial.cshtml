@model string
@*string should be button click event name*@


   
@foreach (Calorie.Models.Pledges.PledgeActivity.ActivityTypes activity in Enum.GetValues(typeof(Calorie.Models.Pledges.PledgeActivity.ActivityTypes)))
{
var imgName = "~/Images/Activities/" + activity+ ".png";

    <div class="btn btn-default btn-sm activity-button" data-activityname="@activity.ToString()" onclick="@Model" data-checked="false">
        <div style="float: left">
            <img src="@Url.Content(@imgName)"/>
            @activity.ToString().Replace("_", " ")
        </div>
        <div style="float: right">
            <span id="tickbox" class="calorie-green-color glyphicon glyphicon-ok pull-right" style="display: none;"></span>
        </div>

    </div>



}

   


