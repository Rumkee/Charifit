@model Calorie.Models.Misc.FaqVM


<tr>
    <td onclick="window.faqClick(event)" class="faq-clickable">
        <div>
            <h4><i class="fa fa-question-circle-o" aria-hidden="true"></i>&nbsp;@Html.Raw(Model.Question) </h4>

        </div>
        
        <div class="faq-answer faq-hidden">
            <div>
                <br />
                @Html.Raw(Model.Answer)
            </div>
            <br />

            @if (@Model.ShowSocial)
            {
                @Html.Partial("..\\Social\\_SocialPartial", Calorie.BusinessLogic.Social.Social.GetSocialVMForSite(Request))
            }
            else
            {                           
            <div class="pull-right btn btn-sm btn-default no-shadow faq-sharebutton faq-likebutton" onclick="faqHelpfulClick(@Model.ID)">
                <i class="fa fa-thumbs-up"></i>
                <div class="faq-sharetext">x<span id="faq-helpful-@Model.ID"></span></div>
            </div>
            }
        </div>

    </td>
</tr>
<script>
    $(function() {
        window.faqHelpfulLoad(@Model.ID);
    })
</script>