@using System.Configuration
@using Calorie.Models.Social

@model Calorie.Models.IndexViewModel

@{
    ViewBag.Title = "ChariFit";
    ViewBag.IsIndex = true;
}


@section metatags
{
    @{
        var props = Calorie.BusinessLogic.Social.OpenGraph.GetOpenGraphVMForSite(Request, Url);
    }
        
    <meta property="og:type" content="@props.type" />    
    <meta property="og:title" content="@props.title" />
    <meta property="og:description" content="@props.description" />
    <meta property="og:image" content="@props.image" />    
}

@section localcss{
    <link rel="stylesheet" href="~/CSS/Home/Index.css">
}


<div class="row social-row" >
    <div class="col-xs-12">
        @Html.Partial("..\\Social\\_SocialPartial", Calorie.BusinessLogic.Social.Social.GetSocialVMForSite(Request))
    </div>
</div>


<section class="parallax">
    <div class="background4">
        <div class="overlay-region text-center">            
            <h3 class="resizable-banner-text-super-header-header">ChariF<span class="calorie-green-color">Ώ</span>t</h3>
            <h3 class="resizable-banner-text-super-header">Workouts With Meaning</h3>



        </div>
    </div>
</section>

<div class="no-overlay-region text-center">
    <br />
    <br />
    <br />

    <div class="resizable-banner-text ">
        Use your fitness tracking data to help fulfill charΏtable pledges.<br /><br />
        Create an account and hook up one of our supported fitness tracker apps,
        then start logging your activities to help pledges reach their goals and fulfill their donations.
    </div>



</div>

<section class="parallax">
    <div class="background2">
        <div class="overlay-region">


            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 col-xl-offset-1 text-center">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="btn btn-default no-shadow full-width">
                                <i class="fa fa-sign-in pull-left vertical-align-fa-icon" aria-hidden="true"></i>&nbsp;Log in
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="btn no-shadow facebook-colour full-width">
                                <i class="fa fa-facebook pull-left vertical-align-fa-icon"></i>&nbsp;&nbsp;Facebook Login / Sign-up
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="btn btn-default no-shadow full-width">
                                <i class="fa fa-user-plus pull-left vertical-align-fa-icon"></i>&nbsp;Sign up with email
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <a href="@Url.Action("Index", "Pledges")" class="btn btn-default no-shadow full-width">

                                <span class="glyphicon glyphicon-arrow-right pull-left vertical-align-fa-icon"></span>&nbsp;Browse Pledges
                            </a>
                        </div>
                    </div>

                </div>


                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-offset-3 col-lg-5 col-xl-offset-3 col-xl-4">

                    <div class="text-center resizable-banner-text">Supported Trackers</div>
               
                    <table class="table table-striped pull-right">

                        <tr>
                            <td>
                                <div class="col-xs-12">
                                    <img class="resizable-tracker-image" src="~/Images/ThirdPartyLogos/fitbit.svg"/>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td >
                                <div class="col-xs-12">
                                    <img class="resizable-tracker-image" src="~/Images/ThirdPartyLogos/MSHealth.png"/>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="col-xs-12">
                                    <img class="resizable-tracker-image" src="~/Images/ThirdPartyLogos/runKeeper.png"/>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <br/>


                </div>

            </div>

        </div>
    </div>
</section>

<div class="no-overlay-region text-center">
    <br />
    <h2 class="resizable-banner-text-header">
        Planning on making donation to a charitable cause?
    </h2>
    <h3 class="resizable-banner-text">
        Why not leverage your donation to inspire others to achieve their fitness goals.<br />
        Pick your charity and pledge amount then set up your activity targets.
    </h3><br />
    <div class="btn btn-default no-shadow ">
        <i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp;Log in
    </div>
    <div class="btn no-shadow facebook-colour ">
        <i class="fa fa-facebook"></i>&nbsp;&nbsp;Facebook Login / Sign up
    </div>
    <div class="btn btn-default no-shadow ">
        <i class="fa fa-user-plus"></i>&nbsp;Sign up with email
    </div>
</div>

<section class="parallax">
    <div class="background3">
        <div class="overlay-region text-center">
            <h2 class="resizable-banner-text-header">
                Charities
            </h2>
            <h3 class="resizable-banner-text">
                All your favorite charities and non-profits listed on<a href="https://home.justgiving.com/"><img class="resizable-justGiving-image" src="data:image/svg+xml;base64," /></a>are here
            </h3><br />
            <a  href="@Url.Action("Index", "Charities")" class="btn btn-default no-shadow ">
                <i class="fa fa-trophy"></i>&nbsp;Top Charities
            </a>

        </div>
    </div>
</section>


<div class="no-overlay-region text-center">
    <br />
    <h2 class="resizable-banner-text-header">
        Companies
    </h2>
    <h3 class="resizable-banner-text">
        Represent a registered company?<br /><br />Why not set up a corporate account today and help inspire employees and deliver on your corporate social responsibility goals
    </h3>
    <br />

    <div class="btn no-shadow facebook-colour ">
        <i class="fa fa-facebook"></i>&nbsp;&nbsp;Facebook Sign up
    </div>
    <div class="btn btn-default no-shadow ">
        <i class="fa fa-user-plus"></i>&nbsp;Sign up with email
    </div>

    <a  href="@Url.Action("Index", "Company")" class="btn btn-default no-shadow ">
        <i class="fa fa-trophy"></i>&nbsp;Top Companies
    </a>
</div>

<section class="parallax">
    <div class="background1">
        <div class="overlay-region text-center">
            <h3 class="resizable-banner-text-header">
                Find us on social media
            </h3>
            <h2 class="resizable-banner-text">
                If you like what we’re doing, why not help us spread the word?<br /><br /> Follow us on your favorite social media platform and help us on our mission!
            </h2>
            <br />
            <i class="fa fa-facebook socialmedia-icon"  onclick="window.location.href = 'http://facebook.com'"></i>&nbsp;&nbsp;
            <i class="fa fa-twitter socialmedia-icon" onclick="window.location.href = 'https://twitter.com/ChariFitApp'"></i>&nbsp;&nbsp;
            <i class="fa fa-linkedin socialmedia-icon" ></i>&nbsp;&nbsp;
        </div>

    </div>
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
