@using Recaptcha.Web.Mvc
@model Calorie.Models.ResetPasswordViewModel


<div class="panel">
    <div class="panel-body ">
        <h4>Change your password.</h4>
        <br />
        
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h5>@Html.ValidationSummary("", new { @class = "text-danger" })</h5>
            @Html.HiddenFor(model => model.Code)

            <div class="form-group">
                <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                    <h6 class="InputLabel">Email</h6>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                    <h6 class="InputLabel">New Password</h6>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                    <h6 class="InputLabel">New Password Again</h6>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <div class="pull-right">
                        @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.Clean)
                        <br />
                        <input type="submit" class="btn btn-warning pull-right" value="Reset Password" />
                    </div>    
                    
                </div>
            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
