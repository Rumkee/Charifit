@using Microsoft.AspNet.Identity


@{

    var db = new Calorie.Models.ApplicationDbContext();
    var id = User.Identity.GetUserId();
    var user = db.Users.FirstOrDefault(u => u.Id == id);

    if (user == null)
    {
        <div id="anonUserCurrencyOptionGroup" class="navbar-right" >

            <span class="glyphicon glyphicon-globe pull-left" ></span>
            <select id="anonUserCurrencySelectList"class="form-control pull-left input-sm ">
                @{
                    var Dict = Calorie.BusinessLogic.CurrencyLogic.getCurrencyToCountryOptions();
                    foreach (var cur in Dict)
                    {
                        <option value="@cur.Key">
                            @cur.Value
                        </option>
                    }
                }
            </select>

        </div>

    }

}

