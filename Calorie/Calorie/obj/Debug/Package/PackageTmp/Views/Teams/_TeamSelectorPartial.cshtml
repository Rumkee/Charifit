@model List<Calorie.Models.Teams.Team>

<div id="TeamSelector" class="modal fade">
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">

                    <div class="col-xs-5">
                        <h4 >Select Team</h4>
                    </div>

                    @*close box*@
                    <div class="col-xs-7">
                        <div class="visible-lg visible-md visible-sm hidden-xs">
                            <div class="btn-group pull-right">
                                <a href="@Url.Action("Create", "Teams")" class="btn btn-default btn-sm "><span class="glyphicon glyphicon-plus-sign"></span>&nbsp;New Team</a>
                                <a class="btn btn-default  btn-sm " onclick="TopTeamsSelect()"><span class="glyphicon glyphicon-list"></span>&nbsp;Top Teams</a>
                                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-label="Close"><span class="glyphicon glyphicon-remove"></span></button>
                            </div>

                        </div>
                        <div class="visible-xs hidden-sm hidden-md hidden-lg pull-right">
                            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-label="Close"><span class="glyphicon glyphicon-remove"></span></button>
                        </div>
                    </div>

                    <div class="visible-xs hidden-sm hidden-md hidden-lg  col-xs-12">
                        <div class="btn-group pull-right">

                            <a href="@Url.Action("Create", "Teams")" class="btn btn-default btn-sm "><span class="glyphicon glyphicon-plus"></span>&nbsp;New Team</a>
                            <a class="btn btn-default  btn-sm " onclick="TopTeamsSelect()"><span class="glyphicon glyphicon-list"></span>&nbsp;Top Teams</a>
                        </div>
                    </div>
                </div>

                <div role="form">

                    <div class="form-group has-feedback open team-search-name">
                        <div class="input-group col-xs-12">
                            <input id="userSearchInput" type="text" class="form-control text-center input-sm" placeholder="Search Teams..."/>
                            <span id="search"><span class="btn btn-sm form-control-feedback glyphicon glyphicon-search" style="pointer-events: auto;" onclick="teamSearch()"></span></span>
                        </div>
                    </div>
                </div>

            </div>

        
            <div class="modal-body">

                <div id="TopTeams">


                    <table class="table table-striped">
                        @foreach (Calorie.Models.Teams.Team T in @Model)
                        {
                            <tr>
                                <td>
                                    @Html.Partial("..\\Teams\\_TeamPartial", new Calorie.Models.Teams.TeamVM() {Team = T, ShowSelector = true, ShowPanel = false})
                                </td>
                            </tr>

                        }

                    </table>

                </div>

                <div id="SearchResults">

                </div>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script src="~/Scripts/Calorie/Teams/_TeamSelectorPartial.js"></script>