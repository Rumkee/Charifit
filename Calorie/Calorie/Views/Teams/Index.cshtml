@model Calorie.Models.Teams.TeamIndexVM

@section localcss{   
}


@{
    var FilterVM = new Calorie.Models.Misc.FilterVM
    {
        Callback = "window.doFilter(a, b)",
        Options = new List<string>() {"Most Stars", "Most Pledges", "Most Popular"}
    };

}

@Html.Partial("..\\Shared\\_FilterPartial", FilterVM)

<br/>
<div id="teamResults">

    @foreach (var t in Model.AllTeams)
    {

        <a href="@Url.Action("Details", "Teams", new {teamname = @t.Name.Replace(" ", "")})">
            @Html.Partial("..\\Teams\\_TeamPartial", new Calorie.Models.Teams.TeamVM() {ShowHyperLinks = false, ShowSelector = false, Team = t})
        </a>
    }
</div>

<script src="~/Scripts/Calorie/Teams/Index.js"></script>
<script>
    var teamFilterURL = '@Url.Action("Filter", "Teams")';
</script>

