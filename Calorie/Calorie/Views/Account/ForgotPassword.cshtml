@using Recaptcha.Web.Mvc
@model Calorie.Models.ForgotPasswordViewModel


@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="panel">
        <div class="panel-body">
            
            <h5><i class="fa fa-paper-plane-o" aria-hidden="true"></i>&nbsp;Enter the email address you signed up with and we'll send you a password reset email.</h5>
            <br/>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                    <h6 class="InputLabel">Email Address</h6>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 ">
                    <div class="pull-right">
                        @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.Clean)
                        <br />
                        <input type="submit" class="btn btn-default pull-right" value="Send Reset Email" />
                    </div>                    
                </div>
            </div>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
